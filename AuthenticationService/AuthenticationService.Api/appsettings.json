{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Database": {
    "Postgres": {
      "Host": "${AUTH_PG_HOST}",
      "Port": "${AUTH_PG_PORT}",
      "Database": "${AUTH_PG_DB}",
      "Username": "${AUTH_PG_USER}",
      "Password": "${AUTH_PG_PASSWORD}"
    }
  },
  "Jwt": {
    "Issuer": "AuthService",
    "Audience": "AuthClients",
    "Secret": "${AUTH_JWT_SECRET}",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 30
  },
  "Otp": {
    "BaseUrl": "${OTP_BASE_URL}"
  },
  "Cache": {
    "DefaultProvider": "Redis",
    "Providers": {
      "Redis": {
        "Host": "${AUTH_REDIS_HOST}",
        "Port": "${AUTH_REDIS_PORT}",
        "Username": "${AUTH_REDIS_USER}",
        "Password": "${AUTH_REDIS_PASSWORD}"
      }
    }
  }
}

